<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link href="~/Content/Styles/site.css" rel="stylesheet" type="text/css"/>
    <title>@Model.GameName</title>
    @inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
</head>
<body>
    <div class="brettpit-content-container">
        <h2 class="brettpit-game-title">@Model.GameName</h2>
        <span>@Model.GameDescription</span>
        
        <div>
            <table>
                @foreach (var item in Model.UserScores)
                {
                    <tr>
                        <td>@item.Username</td>
                        <td>@item.Score</td>
                    </tr>
                }
            </table>
            <div>
                Your current score: @Model.CurrentUserScore
            </div>
        </div>

        <div>
            <table>
                <tr>
                    <th>Accept</th>
                    <th>Decline</th>
                    <th>Opponent</th>
                    <th>Result</th>
                    <th>Date</th>
                </tr>
                @foreach (var item in Model.Matches)
                {
                    <tr>
                        <td>@item.Status</td>
                        <td></td>
                        <td>@item.Opponent</td>
                        <td>@item.Result</td>
                        <td>@item.Date</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>
